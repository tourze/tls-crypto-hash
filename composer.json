{
  "name": "tourze/tls-crypto-hash",
  "description": "Comprehensive PHP library providing cryptographic hash functions, message authentication codes (MAC), and key derivation functions (KDF) for TLS protocol implementations",
  "type": "library",
  "license": "MIT",
  "require": {
    "ext-gmp": "*",
    "ext-hash": "*",
    "ext-openssl": "*",
    "tourze/tls-common": "0.0.*"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.5",
    "tourze/phpunit-base": "1.*",
    "tourze/symfony-testing-framework": "0.0.*"
  },
  "autoload": {
    "psr-4": {
      "Tourze\\TLSCryptoHash\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tourze\\TLSCryptoHash\\Tests\\": "tests/"
    }
  }
}